<xs:complexType name="heartbeat">
    <xs:all>
      <xs:element name="service" type="service"/>
      <xs:element name="timestamp" type="xs:dateTime"/>
      <!-- up, down, starting up, shutting down, restarting -->
      <xs:element name="status" type="xs:string"/>
      <!-- check confluence for error codes -->
      <xs:element name="error" type="xs:positiveInteger"/>
      <xs:element name="extra" minOccurs="0">
        <xs:complexType>
          <xs:all>
            <xs:element type="xs:string" name="user-count" />
          </xs:all>
        </xs:complexType>
      </xs:element>
    </xs:all>
</xs:complexType>
